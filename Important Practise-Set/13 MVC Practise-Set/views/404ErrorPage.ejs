<%- include('partials/headHtml') %>
  </head>
  <body
    class="min-h-screen bg-gradient-to-br from-blue-50 via-indigo-50 to-purple-50"
  >
    <!-- Navigation Header -->
    <!-- Main Content -->
    <div class="flex items-center justify-center p-4 pt-8">
      <div class="text-center">
        <!-- Main Container -->
        <div
          class="bg-white/80 backdrop-blur-lg rounded-3xl p-12 shadow-2xl border border-white/20 max-w-md mx-auto"
        >
          <!-- Error Icon -->
          <div class="mb-6">
            <div
              class="w-20 h-20 bg-gradient-to-r from-red-500 to-orange-500 rounded-full flex items-center justify-center mx-auto shadow-lg"
            >
              <svg
                class="w-10 h-10 text-white"
                fill="currentColor"
                viewBox="0 0 20 20"
              >
                <path
                  fill-rule="evenodd"
                  d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z"
                  clip-rule="evenodd"
                />
              </svg>
            </div>
          </div>

          <!-- Error Message -->
          <h1
            class="text-4xl font-bold text-gray-800 mb-4 bg-gradient-to-r from-red-600 to-orange-600 bg-clip-text"
          >
            404
          </h1>

          <!-- Subtitle -->
          <h2 class="text-2xl font-semibold text-gray-700 mb-4">
            Page Not Found
          </h2>

          <!-- Description -->
          <p class="text-gray-600 mb-8 text-lg">
            Oops! The page you're looking for doesn't exist.
          </p>

          <!-- Error Details -->
          <div class="bg-red-50 border border-red-200 rounded-xl p-4 mb-8">
            <div
              class="flex items-center justify-center space-x-2 text-red-700"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                <path
                  fill-rule="evenodd"
                  d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z"
                  clip-rule="evenodd"
                />
              </svg>
              <span class="font-semibold">Page not available</span>
            </div>
          </div>

          <!-- Action Buttons -->
          <div class="space-y-4">
            <a
              href="/"
              class="block w-full bg-gradient-to-r from-rose-500 to-pink-500 hover:from-rose-600 hover:to-pink-600 text-white font-semibold py-3 px-6 rounded-xl shadow-lg hover:shadow-xl transform hover:-translate-y-1 transition-all duration-300 text-lg"
            >
              Go to Home
            </a>

            <a
              href="/host/add-home"
              class="block w-full bg-gray-100 hover:bg-gray-200 text-gray-700 font-semibold py-3 px-6 rounded-xl transition-all duration-300 text-lg"
            >
              Add Home
            </a>
          </div>
        </div>
      </div>
    </div>

    <!-- Decorative elements -->
    <div
      class="absolute top-10 left-10 w-32 h-32 bg-gradient-to-r from-blue-400 to-purple-400 rounded-full opacity-20 blur-xl"
    ></div>
    <div
      class="absolute bottom-10 right-10 w-40 h-40 bg-gradient-to-r from-pink-400 to-rose-400 rounded-full opacity-20 blur-xl"
    ></div>
  </body>
</html>
