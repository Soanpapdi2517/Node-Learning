<%- include('../partials/headHtml') %>
  </head>
  <body
    class="min-h-screen bg-gradient-to-br from-blue-50 via-indigo-50 to-purple-50"
  >
    <!-- Navigation Header -->
<%- include('../partials/Navigation') %>
    
<div class="min-w-lg  px-4 py-8">
  <h1 class="text-4xl font-extrabold text-gray-900 mb-2 tracking-tight">Explore New Homes</h1>
  <p class="text-lg text-gray-500 mb-10">
    Explore Amazing Stays & Experiences:
  </p>
  <!-- Registered Homes List -->
</div>
      <!-- Registered Homes List -->
      <ul
        class="mt-8 max-w-md mx-auto bg-white/60 backdrop-blur-sm rounded-2xl p-6 shadow-lg border border-white/20"
      >
        <li
          class="text-lg font-bold mb-4 text-center bg-gradient-to-r from-rose-600 to-pink-600 bg-clip-text text-transparent border-b border-gray-200 pb-2"
        >
          
        </li>
        <%registeredHomes.forEach(home => {%>
        <li
          class="flex items-center gap-4 bg-white/70 rounded-xl shadow-lg border border-white/30 p-4 mb-4 hover:bg-white/90 transition-all duration-200"
        >
          <!-- Home Image -->
          <img
            src="<%= home.imgURL %>"
            alt="<%= home.houseName %>"
            class="w-20 h-20 object-cover rounded-xl border-2 border-rose-200 shadow-md"
            onerror="this.onerror=null;this.src='https://via.placeholder.com/80x80?text=No+Image';"
          />
          <!-- Home Details -->
          <div class="flex-1">
            <div class="flex items-center gap-2 mb-1">
              <svg
                class="w-5 h-5 text-rose-500"
                fill="currentColor"
                viewBox="0 0 20 20"
              >
                <path
                  d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"
                />
              </svg>
              <span class="text-lg font-bold text-gray-800"><%= home.houseName %></span>
            </div>
            <div class="flex flex-wrap gap-4 text-gray-600 text-sm mt-2">
              <span class="inline-flex items-center gap-1">
                <span class="font-semibold">Price:</span> â‚¹<%= home.price %>/night
              </span>
              <span class="inline-flex items-center gap-1">
                <span class="font-semibold">Location:</span> <%= home.location %>
              </span>
              <span class="inline-flex items-center gap-1">
                <svg class="w-4 h-4 text-yellow-400" fill="currentColor" viewBox="0 0 20 20"><path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/></svg>
                <span class="font-semibold">Rating:</span> <%= home.rating %>/5
              </span>
            </div>
          </div>
          <button class="flex-1 bg-gradient-to-r from-green-600 to-green-200 hover:from-green-200 hover:to-green-600 text-white hover:text-black font-semibold py-3 px-4 rounded-full shadow hover:shadow-md transform hover:-translate-y-0.5 transition-all duration-200 flex items-center justify-center gap-2 text-sm">
            <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"/>
            </svg>
            Book
          </button>
        </li>
        <% });%>
      </ul>
    </div>

    <!-- Decorative elements -->
    <div
      class="absolute top-10 left-10 w-32 h-32 bg-gradient-to-r from-blue-400 to-purple-400 rounded-full opacity-20 blur-xl"
    ></div>
    <div
      class="absolute bottom-10 right-10 w-40 h-40 bg-gradient-to-r from-pink-400 to-rose-400 rounded-full opacity-20 blur-xl"
    ></div>
  </body>
</html>
