<%- include('../partials/headHtml') %>
  </head>
  <body
    class="min-h-screen bg-gradient-to-br from-blue-50 via-indigo-50 to-purple-50"
  >
    <!-- Navigation Header -->
    <%- include('../partials/Navigation') %>

    <!-- Main Content -->
    <div class="flex items-center justify-center p-4 pt-8">
      <div class="text-center w-full max-w-md">
        <!-- Main Container -->
        <div
          class="bg-white/80 backdrop-blur-lg rounded-3xl p-8 shadow-2xl border border-white/20"
        >
          <!-- Icon -->
          <div class="mb-6">
            <div
              class="w-16 h-16 bg-gradient-to-r from-rose-500 to-pink-500 rounded-full flex items-center justify-center mx-auto shadow-lg"
            >
              <svg
                class="w-8 h-8 text-white"
                fill="currentColor"
                viewBox="0 0 20 20"
              >
                <path
                  fill-rule="evenodd"
                  d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z"
                  clip-rule="evenodd"
                />
              </svg>
            </div>
          </div>

          <!-- Heading -->
          <h1
            class="text-3xl font-bold  mb-6 bg-gradient-to-r from-rose-600 to-pink-600 bg-clip-text text-transparent"
          >
            Register Your Home
          </h1>

          <!-- Form -->
          <form action="/host/add-home" method="post" class="space-y-6">
            <!-- Input Field -->
            <div class="relative">
              <input
                type="text"
                name="houseName"
                placeholder="Enter Your House Name"
                required
                class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:border-rose-500 focus:outline-none transition-all duration-300 bg-white/50 backdrop-blur-sm text-gray-800 placeholder-gray-500 font-medium"
              />
              <input
                type="number"
                name="Price"
                required
                placeholder="Add Price Per Night"
                class="w-full mt-4 px-4 py-3 border-2 border-gray-200 rounded-xl focus:border-rose-500 focus:outline-none transition-all duration-300 bg-white/50 backdrop-blur-sm text-gray-800 placeholder-gray-500 font-medium"
              />
              <input
                type="text"
                name="Location"
                required
                placeholder="Add Location"
                class="w-full mt-4 px-4 py-3 border-2 border-gray-200 rounded-xl focus:border-rose-500 focus:outline-none transition-all duration-300 bg-white/50 backdrop-blur-sm text-gray-800 placeholder-gray-500 font-medium"
              />
              <div class="relative mt-4">
                <div class="absolute inset-y-0 left-0 flex items-center pl-3">
                  <svg
                    class="w-5 h-5 text-yellow-500"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path
                      d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"
                    />
                  </svg>
                </div>
                <input
                  type="range"
                  min="0"
                  max="5"
                  name="Rating"
                  required
                  placeholder="Rating of your home"
                  class="w-full mt-4 accent-rose-500 focus:outline-none"
                />
              </div>
              <input
                type="text"
                name="Image"
                required
                placeholder="Provide Image URL"
                class="w-full mt-4 px-4 py-3 border-2 border-gray-200 rounded-xl focus:border-rose-500 focus:outline-none transition-all duration-300 bg-white/50 backdrop-blur-sm text-gray-800 placeholder-gray-500 font-medium"
              />

              <div class="absolute inset-y-0 right-0 flex items-center pr-3">
                <svg
                  class="w-5 h-5 text-gray-400"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <path
                    fill-rule="evenodd"
                    d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z"
                    clip-rule="evenodd"
                  />
                </svg>
              </div>
            </div>

            <!-- Divider -->
            <div class="relative">
              <div class="absolute inset-0 flex items-center">
                <div class="w-full border-t border-gray-200"></div>
              </div>
              <div class="relative flex justify-center text-sm">
                <span class="px-2 bg-white/80 text-gray-500"
                  >Ready to register?</span
                >
              </div>
            </div>

            <!-- Submit Button -->
            <button
              type="submit"
              class="w-full bg-gradient-to-r from-rose-500 to-pink-500 hover:from-rose-600 hover:to-pink-600 text-white font-semibold py-3 px-6 rounded-xl shadow-lg hover:shadow-xl transform hover:-translate-y-1 transition-all duration-300 text-lg"
            >
              Register Home
            </button>
          </form>
        </div>
      </div>
    </div>

    <!-- Decorative elements -->
    <div
      class="absolute top-10 left-10 w-32 h-32 bg-gradient-to-r from-blue-400 to-purple-400 rounded-full opacity-20 blur-xl"
    ></div>
    <div
      class="absolute bottom-10 right-10 w-40 h-40 bg-gradient-to-r from-pink-400 to-rose-400 rounded-full opacity-20 blur-xl"
    ></div>
  </body>
</html>
